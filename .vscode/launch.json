{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}",
        "/Users/schoedel/Projects/piwigo-got": "${workspaceFolder}"
      },
      "log": true,
      "ignore": [
        "**/vendor/**/*.php"
      ]
    },
    {
      "name": "Laravel: Artisan",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/artisan",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/opt/homebrew/bin/php",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug"
      }
    },
    {
      "name": "Launch currently open PHP file",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9003,
      "runtimeExecutable": "/opt/homebrew/bin/php",
      "runtimeArgs": [
        "-dxdebug.mode=debug",
        "-dxdebug.start_with_request=yes"
      ]
    }
  ]
}

