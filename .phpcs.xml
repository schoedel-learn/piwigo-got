<?xml version="1.0"?>
<ruleset name="Piwigo">
  <description>Piwigo Coding Standards</description>
  
  <!-- Check all PHP files in the project -->
  <file>.</file>
  
  <!-- Exclude directories -->
  <exclude-pattern>*/_data/*</exclude-pattern>
  <exclude-pattern>*/upload/*</exclude-pattern>
  <exclude-pattern>*/galleries/*</exclude-pattern>
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/plugins/*</exclude-pattern>
  <exclude-pattern>*/themes/*</exclude-pattern>
  <exclude-pattern>*/local/*</exclude-pattern>
  <exclude-pattern>*/include/smarty/*</exclude-pattern>
  <exclude-pattern>*/include/phpmailer/*</exclude-pattern>
  
  <!-- Show progress -->
  <arg value="p"/>
  
  <!-- Use colors in output -->
  <arg value="-colors"/>
  
  <!-- Show sniff codes in all reports -->
  <arg value="s"/>
  
  <!-- PHP version -->
  <arg name="php_version" value="70400"/>
  
  <!-- Basic PHP standard -->
  <rule ref="Generic"/>
  <rule ref="PEAR">
    <exclude name="PEAR.Commenting.FileComment"/>
    <exclude name="PEAR.Commenting.ClassComment"/>
  </rule>
  
  <!-- Line length -->
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="120"/>
      <property name="absoluteLineLimit" value="150"/>
    </properties>
  </rule>
</ruleset>

